//------------------------------------------------------------------------------
//  clearfix
//------------------------------------------------------------------------------
clearfix() {
    &:before,
    &:after{
        content: "";
        display: table;
    }
    &:after {
        clear: both;
    }
}

//------------------------------------------------------------------------------
//  horizontal line
//------------------------------------------------------------------------------
hr(){
    border-width: 0;
    height: 1px;
    background-color: $border_color_base;
    overflow: visible;
}

//------------------------------------------------------------------------------
//  box dimesion
//------------------------------------------------------------------------------
box($width, $height = $width){
    width: $width;
    height: $height;
}

button(){
    text-decoration: none!important;
    border-width: 0;
    padding: 0 30px;
    height: 60px;
    line-height: @height;
    display: inline-block;
    text-align: center;
    min-width: 150px;
    border-radius: 1px;
    box-shadow: $shadow_dp1;
    cursor: pointer;
    transition: .2s;
    position: relative;
    background-color: $color_base;
    color: $color_white;
    font-weight: $weight_normal;

    &:hover{
        background-color: $color_white;
        color: $color_base!important;
    }
}

//------------------------------------------------------------------------------
//  Media Queries based on the viewport
//------------------------------------------------------------------------------
//mq = media query

mq($point) {
    $xs = 600px;
    $sm = 800px;
    $md = 1000px;
    $lg = 1200px;

    if $point == xs {
        @media (max-width: $xs - 1) {
            {block}
        }
    }
    else if $point == gt-xs {
        @media (min-width: $xs) {
            {block}
        }
    }
    else if $point == sm {
        @media (max-width: $sm - 1) {
            {block}
        }
    }
    else if $point == gt-sm {
        @media (min-width: $sm) {
            {block}
        }
    }
    else if $point == md {
        @media (max-width: $md - 1) {
            {block}
        }
    }
    else if $point == gt-md {
        @media (min-width: $md) {
            {block}
        }
    }
    else if $point == lg {
        @media (max-width: $lg - 1) {
            {block}
        }
    }
    else if $point == gt-lg {
        @media (min-width: $lg) {
            {block}
        }
    }
}